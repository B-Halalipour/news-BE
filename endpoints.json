{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles",
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "serves a single article by its article_id",
    "exampleResponse": {
      "article": {
        "author": "weegembump",
        "title": "Seafood substitutions are increasing",
        "article_id": 1,
        "body": "Text of the article",
        "topic": "cooking",
        "created_at": "2018-05-30T15:59:13.341Z",
        "votes": 0,
        "article_img_url": "https://example.com/image.jpg"
      }
    }
  },
  "/api/articles/:article_id/comments": {
    "method": "POST",
    "description": "Adds a new comment to the given article. Requires username and body in the request body. Responds with the posted comment.",
    "request_body": {
      "username": "butter_bridge",
      "body": "Nice article!"
    },
    "response": {
      "comment": {
        "comment_id": 123,
        "body": "Nice article!",
        "article_id": 1,
        "author": "butter_bridge",
        "created_at": "2025-06-06T12:34:56.789Z",
        "votes": 0
      }
    }
  }
}
